   Amaya/doc/amaya/Selecting.html \
   Amaya/doc/amaya/Browsing.html \
   Amaya/doc/amaya/CSS.html \
   Amaya/doc/amaya/Plugins.html \
   Amaya/doc/amaya/Keyboard.html \
   Amaya/doc/amaya/Printing.html \
   Amaya/doc/amaya/Changing.html \
