#!/bin/sh
#
# This script builds all the binary tar files for Amaya
#
#       amaya-$MACH-$AMAYAVERSION.tgz
# 
AMAYAVERSION=v.r
THOTDIR=$PWD/../..
DEST=$HOME
PLATFORMS="solaris8 LINUX-ELF GTK GL"

TAR="tar cvzfh "
COMPRESS="gzip -9"

cd $THOTDIR
echo "Generating binary tar files from " $THOTDIR

for MACH in $PLATFORMS
do
echo "Platform ------->" $MACH
 $TAR $DEST/amaya-$MACH-$AMAYAVERSION.tgz \
   Amaya/README.amaya \
   Amaya/README.gl \
   Amaya/amaya/COPYRIGHT* \
   Amaya/amaya/AmayaPage.html \
   Amaya/amaya/*.PRS \
   Amaya/amaya/*.STR \
   Amaya/amaya/*.TRA \
   Amaya/amaya/*.conf \
   Amaya/amaya/*.en \
   Amaya/amaya/*.gif \
   Amaya/amaya/*.png \
   Amaya/amaya/*.trans \
   Amaya/annotlib/Annot.STR \
   Amaya/annotlib/AnnotP.PRS \
   Amaya/annotlib/AnnotT.TRA \
   Amaya/annotlib/selected.gif \
   Amaya/batch/MachineType \
   Amaya/config/XKeysymDB \
   Amaya/config/en-amayadialogue \
   Amaya/config/en-amayamsg \
   Amaya/config/en-libdialogue \
   Amaya/config/en-corrdialogue \
   Amaya/config/de-* \
   Amaya/config/es-* \
   Amaya/config/fi-* \
   Amaya/config/fr-* \
   Amaya/config/it-* \
   Amaya/config/pt-* \
   Amaya/config/tr-* \
   Amaya/config/*.rdf \
   Amaya/config/*thot.rc \
   Amaya/config/amaya.emacs \
   Amaya/config/amaya.kb \
   Amaya/config/amaya.keyboard \
   Amaya/config/amaya.profiles \
   Amaya/config/annot.schemas \
   Amaya/config/fonts.* \
   Amaya/config/lib_files.dat \
   Amaya/config/libconfig/*.css \
   Amaya/config/libconfig/*.png \
   Amaya/config/libconfig/*.lhtml \
   Amaya/config/libconfig/*.svg \
   Amaya/dicopar/E*.dic \
   Amaya/dicopar/*.ptn \
   Amaya/dicopar/alphabet \
   Amaya/dicopar/clavier \
   Amaya/doc/html/*.html \
   Amaya/doc/html/*/*.html \
   Amaya/doc/html/*.css \
   Amaya/doc/images/*.gif \
   Amaya/doc/images/*.png \
   Amaya/doc/images/*.jpg \
   Amaya/doc/images/w3c_home \
   Amaya/$MACH/bin/amaya \
   Amaya/$MACH/bin/print \
   Amaya/fonts/Families.list \
   Amaya/fonts/fonts.dir \
   Amaya/fonts/icones*
done







