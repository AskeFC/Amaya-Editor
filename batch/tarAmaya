   Amaya/doc/Icons/*.gif \
   Amaya/Icons/WWW/activity_48x48 \
   Amaya/Icons/WWW/guide48x \
   Amaya/Icons/WWW/new_red \
   Amaya/Icons/WWW/relnotes48x \
   Amaya/Icons/WWW/w3c_home \
   Amaya/$MACH/bin/amaya \
   Amaya/$MACH/bin/print \
   Amaya/batch/MachineType \
   Amaya/amaya/COPYRIGHT* \
   Amaya/amaya/AmayaPage.html \
   Amaya/amaya/HTML.STR \
   Amaya/amaya/HTML.conf \
   Amaya/amaya/HTML.trans \
   Amaya/amaya/*.en \
   Amaya/amaya/*.fr \
   Amaya/amaya/HTML*.PRS \
   Amaya/amaya/HTML*.TRA \
   Amaya/amaya/*.en \
   Amaya/amaya/*.fr \
   Amaya/amaya/*.gif \
   Amaya/amaya/MathML.STR \
   Amaya/amaya/MathML*.PRS \
   Amaya/amaya/MathML*.TRA \
   Amaya/amaya/MathML.trans \
   Amaya/amaya/TextFile.STR \
   Amaya/amaya/TextFile*.PRS \
   Amaya/amaya/TextFile*.TRA \
   Amaya/fonts/Families.list \
   Amaya/fonts/fonts.dir \
   Amaya/fonts/icones*
