#!/bin/sh
#
# This script builds all the binary tar files for Amaya
#
#       amaya-$MACH-$AMAYAVERSION.tar.gz
# 
AMAYAVERSION=2.0
THOTDIR=/tahiti/diffusion/Amaya
DEST=/tahiti/thottape
PLATFORMS="solaris2 LINUX-ELF RS6000 SGI osf1"
#PLATFORMS="osf1"
#PLATFORMS="RS6000"

#THOTDIR=$HOME/Amaya
#DEST=$HOME
#PLATFORMS="osf1"

TAR="tar cvzfh "
COMPRESS="gzip -9"

cd $THOTDIR
rm LINUX-ELF
ln -s LINUX-ELF-lib6 LINUX-ELF
cd ..

for MACH in $PLATFORMS
do
 $TAR $DEST/amaya-$MACH-$AMAYAVERSION.tar.gz \
   Amaya/README.amaya \
   Amaya/config/XKeysymDB \
   Amaya/config/amaya.kb \
   Amaya/config/amaya.keyboard \
   Amaya/config/*thot.rc \
   Amaya/config/en-amayadialogue \
   Amaya/config/en-amayamsg \
   Amaya/config/en-libdialogue \
   Amaya/config/en-transdialogue \
   Amaya/config/en-corrdialogue \
   Amaya/config/fr-amayadialogue \
   Amaya/config/fr-amayamsg \
   Amaya/config/fr-libdialogue \
   Amaya/config/fr-transdialogue \
   Amaya/config/fr-corrdialogue \
   Amaya/config/de-amayadialogue \
   Amaya/config/de-amayamsg \
   Amaya/config/de-libdialogue \
   Amaya/config/de-transdialogue \
