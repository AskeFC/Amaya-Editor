PRESENTATION Annot;

VIEWS
   Formatted_view;

#ifdef PAGE
PRINT
   Formatted_view;
#endif

#define EL_INDENT 2.3

DEFAULT
	BEGIN
	HorizRef: Enclosed . HRef;
	VertRef: * . Left;
	Width: Enclosed . Width;
	Height: Enclosed . Height;
	VertPos: Top = Previous . Bottom;
	HorizPos: Left = Enclosing . Left;
	Justify: Enclosing =;
	Hyphenate: Enclosing =;
	LineSpacing: Enclosing =;
	LineWeight: Enclosing =;
	LineBreak: Yes;
	PageBreak: Yes;
	Visibility: Enclosing =;
	Font: Enclosing =;
	Style: Enclosing =;
	Weight: Enclosing =;
	Underline: Enclosing =;
	Thickness: Enclosing =;
	Size: Enclosing =;
	Adjust: Enclosing =;
	Indent: Enclosing =;
	Depth: Enclosing =;
	FillPattern: nopattern;
	END;

BOXES

  AUTHOR_Box:
	BEGIN
	Content: (Text 'Author: ');
	Visibility: Creator =;
	HorizPos: Left = Enclosing . Left + EL_INDENT;
	VertPos: nil;
	Font: Creator =;
	Style: Creator =;
	Weight: Creator =;
	Size: Creator =;
	END;

RULES

  Annot:
	BEGIN
	Adjust: Left;
	Justify: No;
	Indent: 0;
	Font: Times;
	Style: Roman;
	Weight: Normal;
	LineWeight: 0;
	Width: Enclosing . Width;
	Height: Enclosing . Height min;
	Size: DOC_FONTSIZE;
	HorizPos: Left = Enclosing . Left;
	VertPos: Top = Enclosing . Top;
	END;

 Description:
	BEGIN
	Visibility: Enclosing =;
	Width: Enclosing . Width - STRUCT_INDENT;
	HorizPos: Left = Enclosing . Left + EL_INDENT;
	END;

