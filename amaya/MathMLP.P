		HorizPos: Left = Previous . Right + 0.5;
		VertPos: HRef = Previous . HRef;
		END;
	END;

   TEXT_UNIT:
	BEGIN
	VertRef: Enclosed . VRef;
	LineBreak: Yes;
	IF immediately within MF
