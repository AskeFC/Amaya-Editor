	BEGIN
	CreateBefore(MSTYLE_S);
	CreateWith(VerticalLine);
        HorizRef: Enclosed . HRef;
	VertPos: HRef = Previous . HRef;
	IN Math_Structure_view BEGIN
		Size: DOC_FONTSIZE;
		Width: Enclosing . Width - STRUCT_INDENT;
		HorizPos: Left = Enclosing . Left + STRUCT_INDENT;
		Font: Helvetica;
		END;
  	END;

