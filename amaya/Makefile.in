#
# Makefile for Amaya WWW Browser/Editor
# Generated from amaya/Makefile.in
# Daniel Veillard, 1997
#

@VPATHOPT@= @srcdir@
THOTDIR = @top_srcdir@

include ../Options

INCLUDES= -DHAVE_CONFIG_H $(AMAYA_INCLUDES) @X_CFLAGS@
LIBS	= -L../tablelib -L../thotlib -L.. -lThotTable -lThotEditor $(IMGLIBS) $(AMAYA_OPTION_LIBS) \
          @X_LIBS@ -lXm -lXt -lXext @X_PRE_LIBS@ -lX11 @X_EXTRA_LIBS@ @LIBS@ -lm

prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

#
# specific entry point check the dependancies
#
amaya : ../thotlib/libThotEditor.a ../tablelib/libThotTable.a ../bin/amaya

#
# General entry point everything should have compiled correctly
#
all : ../bin/amaya

clean :
	$(RM) *.o EDITORAPP.c EDITOR.A

install : all
	$(INSTALL) ../bin/amaya $(bindir)

include .depends

force :

../bin/str : force
	@(cd ../batch ; $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)" app str prs tra)

../thotlib/libThotEditor.a : force
	@(cd ../thotlib ; $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)" libThotEditor.a)

../tablelib/libThotTable.a : force
	@(cd ../tablelib ; $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)" libThotTable.a)

../libjpeg.a :
	@(cd ../libjpeg ; $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)")

../libpng.a :
	@(cd ../libpng ; $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)")

../libz.a :
	@(cd ../libpng/zlib ; $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)")

../tools/mkdep/mkdep : 
	@(cd ../tools/mkdep ; $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)")

.depends depend : ../tools/mkdep/mkdep
	../tools/mkdep/mkdep -relative -vpath $(VPATH) $(INCLUDES) $(VPATH)/*.c  > .depends

#########################################################################
#									#
#		Optional configuration rules				#
#									#
#########################################################################

#include the fragments for java if configured in
@java_frag@

#include the fragments for plugins if configured in
@plugin_frag@

#include the fragments for libwww if configured in
@www_frag@

#########################################################################
#									#
#		         General rules					#
#									#
#########################################################################


AMAYA_OPTIONS= @AMAYA_OPTIONS@ $(AMAYA_JAVA_OPTIONS) $(AMAYA_PLUGIN_OPTIONS) \
               $(AMAYA_LIBWWW_OPTIONS)

AMAYA_OPTION_INCLUDES= $(AMAYA_JAVA_INCLUDES) $(AMAYA_PLUGIN_INCLUDES) \
               $(AMAYA_LIBWWW_INCLUDES)

AMAYA_OPTION_OBJ= $(AMAYA_JAVA_OBJ) $(AMAYA_PLUGIN_OBJ) \
               $(AMAYA_LIBWWW_OBJ)

AMAYA_OPTION_LIBS= $(AMAYA_JAVA_LIBS) $(AMAYA_PLUGIN_LIBS) \
               $(AMAYA_LIBWWW_LIBS)

AMAYA_INCLUDES= -I. -I.. -I@top_srcdir@/thotlib/include -I@srcdir@ -I@srcdir@/f \
                -I@top_srcdir@/libpng/zlib $(AMAYA_OPTION_INCLUDES)

AMAYA_LIBS= ../thotlib/libThotEditor.a ../tablelib/libThotTable.a \
            $(AMAYA_OPTION_LIBS) ../libpng.a ../libz.a ../libjpeg.a

AMAYA	= @top_srcdir@/amaya

#
# Rule to build objects
#
.c.o :
	$(CC) $(CFLAGS) $(AMAYA_OPTIONS) $(INCLUDES) -c $< -o $@

#########################################################################
#									#
#		Rules to build the binary				#
#									#
#########################################################################

AMAYA_OBJ = \
	HTMLAPP.o \
	EDITORAPP.o \
	init.o \
	EDITORactions.o \
	HTMLactions.o \
	HTMLbook.o \
	HTMLform.o \
	HTMLedit.o \
	HTMLsave.o \
	html2thot.o \
	HTMLstyle.o \
	EDITstyle.o \
	HTMLimage.o \
	EDITimage.o \
	HTMLpresentation.o \
	p2css.o \
	UIcss.o \
	css.o \
	HTMLhistory.o \
	AHTURLTools.o \
	trans.o \
	transparse.o \
	HTMLtable.o

#
# Structure schema compilation.
#
$(AMAYA)/HTML.STR : $(AMAYA)/HTML.S ../bin/str
	STR=`pwd`/../bin/str;PRS=`pwd`/../bin/prs;TRA=`pwd`/../bin/tra;\
	cd $(AMAYA); THOTDIR=`pwd`/.. ;export THOTDIR; \
	$$STR $(AMAYA_OPTIONS) HTML ;\
	$$PRS $(AMAYA_OPTIONS) HTMLP ;\
	$$PRS $(AMAYA_OPTIONS) -DPAGE HTMLP HTMLPP ;\
	$$PRS $(AMAYA_OPTIONS) -DUS_PAPER HTMLP HTMLPPUS ;\
	$$PRS $(AMAYA_OPTIONS) -DLINK_NUMBER -DPAGE HTMLP HTMLPLP ;\
	$$PRS $(AMAYA_OPTIONS) -DLINK_NUMBER -DUS_PAPER HTMLP HTMLPLPUS ;\
	$$PRS $(AMAYA_OPTIONS) -DBLACK_WHITE HTMLP HTMLPBW ;\
	$$TRA $(AMAYA_OPTIONS) HTMLT ;\
	$$TRA $(AMAYA_OPTIONS) HTMLTT

#
# Presentation schemas compilation
#
$(AMAYA)/HTMLP.PRS : $(AMAYA)/HTMLP.P
	PRS=`pwd`/../bin/prs ; \
	cd $(AMAYA); THOTDIR=`pwd`/.. ;export THOTDIR; \
	$$PRS $(AMAYA_OPTIONS) -DPAGE HTMLP HTMLPP ;\
	$$PRS $(AMAYA_OPTIONS) -DUS_PAPER HTMLP HTMLPPUS ;\
	$$PRS $(AMAYA_OPTIONS) -DLINK_NUMBER -DPAGE HTMLP HTMLPLP ;\
	$$PRS $(AMAYA_OPTIONS) -DLINK_NUMBER -DUS_PAPER HTMLP HTMLPLPUS ;\
	$$PRS $(AMAYA_OPTIONS) -DBLACK_WHITE HTMLP HTMLPBW

#
# Traduction schemas compilation
#
$(AMAYA)/HTMLT.TRA : $(AMAYA)/HTMLT.T
	TRA=`pwd`/../bin/tra ; \
	cd $(AMAYA); THOTDIR=`pwd`/.. ;export THOTDIR ;\
	$$TRA $(AMAYA_OPTIONS) HTMLT ;\
	$$TRA $(AMAYA_OPTIONS) HTMLTT

AMAYA_SCHEMAS= $(AMAYA)/HTML.STR $(AMAYA)/HTMLP.PRS $(AMAYA)/HTMLT.TRA

#
# Interface schemas compilation
#
HTMLAPP.o : HTMLAPP.c
	$(CC) $(CFLAGS) $(AMAYA_OPTIONS) $(INCLUDES) -c HTMLAPP.c -o $@

HTML.h HTMLAPP.c : @srcdir@/HTML.STR @srcdir@/HTML.A
	$(CP) @srcdir@/HTML.A . ; THOTDIR=$(THOTDIR) ; export THOTDIR ; \
	../bin/app $(AMAYA_OPTIONS) HTML.A

EDITORAPP.o : EDITORAPP.c
	$(CC) $(CFLAGS) $(AMAYA_OPTIONS) $(INCLUDES) -c EDITORAPP.c -o $@

EDITORAPP.c : @srcdir@/EDITOR.A
	$(CP) @srcdir@/EDITOR.A . ; THOTDIR=$(THOTDIR) ; export THOTDIR ; \
	../bin/app $(AMAYA_OPTIONS) EDITOR.A

../bin/amaya : $(AMAYA_SCHEMAS) $(AMAYA_OBJ) $(AMAYA_OPTION_OBJ) $(AMAYA_LIBS)
	@(if test ! -d ../bin ; then $(MKDIR) ../bin ; fi)
	$(CC) $(LDFLAGS) -o ../bin/amaya $(AMAYA_OBJ) $(AMAYA_OPTION_OBJ) $(LIBS)
	@$(ECHO) "====>" amaya is done

